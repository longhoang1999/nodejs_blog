<style>
    #form_create_course{
        width: 50%;
        margin: auto;
    }
</style>
<h3>{{mission}}</h3>

<div class="mt-4">
    <form action="/courses/store" method="POST" id="form_create_course">
        <div class="form-group">
            <label for="input_name">Nhập tên khóa học</label>
            <input type="text" class="form-control" placeholder="nhập tên khóa học" name="nameCourse" id="input_name">
        </div>
        <div class="form-group">
            <label for="input_des">Nhập tên khóa học</label>
            <textarea name="des" id="input_des" placeholder="nhập mô tả khóa học" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="input_videID">Nhập video id</label>
            <input type="text" class="form-control" placeholder="nhập video id" name="videoId" id="input_videID">
        </div>
        <input type="submit" class="btn btn-success">
    </form>
</div>